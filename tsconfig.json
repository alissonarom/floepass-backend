{
  "compilerOptions": {
    "target": "es6", // Alterado para ES6 (Node.js suporta ES6 nativamente)
    "lib": ["es6"], // Removido "dom" e "dom.iterable" (não são necessários para backend)
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs", // Alterado para CommonJS (recomendado para Node.js)
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // Alterado para false (para permitir a compilação do TypeScript)
    "rootDir": "./src",
    "outDir": "./dist", // Certifique-se de que o diretório de saída está configurado
    "sourceMap": true // Adicionado para facilitar a depuração
  },
  "include": ["src/**/*"], // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules", "dist", "src/models/**/*"] // Exclui node_modules, dist e modelos Mongoose legados
}